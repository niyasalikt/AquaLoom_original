<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid
        android:color="@color/registercolor">
    </solid>

    <corners
        android:radius="25dp">
    </corners>
    <gradient
        android:angle="90"
        android:centerX="0.1"
        android:centerY="0.1"
        android:centerColor="#272728"
        android:startColor="#d9e0e1"
        android:endColor="#635e5e"
        android:gradientRadius="20"
        android:type="linear"/>

    <stroke
        android:width="1dp"
        android:color="#FFF">
    </stroke>

    <padding
        android:top="0dp"
        android:right="10dp"
        android:left="10dp"
        android:bottom="0dp">
    </padding>

</shape>